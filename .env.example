# AI Worker Environment Configuration
# Copy this file to .env and fill in your values

# REQUIRED - RabbitMQ (external server)
RABBITMQ_URI=amqp://myuser:mypassword123@localhost:5672/

# REQUIRED - Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_INPUT_CONTAINER=eduva-temp-storage
AZURE_OUTPUT_CONTAINER=eduva-storage

# REQUIRED - Backend API
BACKEND_API_BASE_URL=http://localhost:5000
BACKEND_API_KEY=your_api_key_here

# REQUIRED - Google AI (Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# REQUIRED - Google Cloud TTS
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json

# OPTIONAL - Image Services
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
PEXELS_ACCESS_KEY=your_pexels_access_key

# OPTIONAL - Queue names
AI_TASK_QUEUE=ai_task_queue
DLQ_QUEUE=ai_task_dlq

# OPTIONAL - AI Model Configuration
DEFAULT_MODEL=gemini-2.0-flash-exp

# OPTIONAL - Worker Configuration
WORKER_ID=ai-worker-001
MAX_CONCURRENT_TASKS=2
MAX_RETRIES=3
